Page {
    font-family: 阿里巴巴普惠体L;
}

.scroll-banner {
    width: 700rpx;
    height: 300rpx;
    border-radius: 10rpx;
    margin: 25rpx 0;
    border-radius: 10rpx;
}

.scroll-banner swiper,
.scroll-banner swiper-item,
.scroll-banner image{
    width: 700rpx;
    height: 300rpx;
    border-radius: 15rpx;
}

/* 公告 */

.notice {
    width: 650rpx;
    padding:10rpx 25rpx;
    height: 50rpx;
    border-radius: 10rpx;
    margin: 15rpx 0;
    border-radius: 15rpx;
    background-color: #fff;
}

.notice-text {
    padding-left: 20rpx;
    font-size: 28rpx;
    line-height: 32rpx;
    color: #555;
    font-weight: bold;
}
.notice-text--0 {
    color: #e33535;
}

/* 下拉框 */
.dropdown {
    width: 120rpx;
    text-align: right;
    padding: 0 10rpx;
    color:var(--colorGold);
    border-radius: 20rpx;
    z-index: 999;
    font-size: 27rpx;
    line-height: 27rpx;
}

.classify-arrow {
    display: flex;
    justify-content: center;
    align-items: center;
}

/* 类别展示 */

.classify-wrap {
    width: 650rpx;
    padding:10rpx 25rpx;
    height: 200rpx;
    border-radius: 10rpx;
    margin: 15rpx 0;
    border-radius: 15rpx;
    background-color: #fff;
}

.classify-wrap .classify {
    width: 25%;
}

.classify-wrap .classify image {
    width: 75rpx;
    height: 75rpx;
    margin-bottom: 20rpx;
}

.classify-wrap .classify text {
    text-align: center;
    font-weight: bold;
}

/* 推荐 */

.all-wrap {
    width: 700rpx;
    padding:10rpx 0;
}

.all-title{
    font-size: 40rpx;
    font-weight: 900;
    margin: 25rpx 0;
}

.all-list{
    width: 100%;
    white-space: nowrap;
}

.all-single{
    display: inline-block;
    width:250rpx;
    height:350rpx;
    border-radius: 15rpx;
    background: #fff;
    margin-right: 25rpx;
}

.all-img {
    display: block;
    width: 250rpx;
    height: 250rpx;
    border-radius: 10rpx 0 0 0;
}
.collegePart-title {
    font-family: Arial, Helvetica, sans-serif;
    color: #000;
    font-size: 28rpx;
    font-weight: bold;
    margin-bottom: 20rpx;
    text-align: left;
}
.collegePart-subtitle {
    font-family: Arial, Helvetica, sans-serif;
    color: #000;
    font-size: 28rpx;
    font-weight: bold;
    margin-top: 20rpx;
    text-align: left;
}
.collegePart {
    font-family: Arial, Helvetica, sans-serif;
    color: #000;
    /* font-weight: bold; */
    text-align: left;
    font-size: 26rpx;
    margin-top: 10rpx;
}

.all-name {
    color: #333;
    margin-top: 10rpx;
    margin-left: 20rpx;
    font-size: 24rpx;
    font-weight: 900;
}

.all-price {
    margin-left: 20rpx;
    color: rgb(221, 32, 32);
    font-size: 22rpx;
    font-weight: 900;
}
