/* miniprogram/pages/shareProduct.wxss */
.share-product {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  height: 100vh;
  width: 100vw;
  padding-top: 40rpx;
  box-sizing: border-box;
  background: #f5f5f5;
}

.content-header-image {
  width: 600rpx;
  height: 81rpx;
  margin-bottom: 2rpx;
}
.share-content {
  width: 90%;
  padding: 40rpx;
  box-sizing: border-box;
  background: #d4d4d4;
  border-radius: 20rpx;
  /* transform: scale(0.9); */
}
.share-content-header {
  display: flex;
  justify-content: center;
}
.share-content-avatar {
  display: block;
  width: 30rpx;
  height: 30rpx;
  overflow: hidden;
  border-radius: 50%;
  margin-right: 10rpx;
  flex-shrink: 0;
}
.share-content-name {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 22rpx;
}
.share-content-text {
  font-size: 24rpx;
  color: #9D9D9D;
}

.share-product-info {
  /* background: #fff; */
  /* margin-top: 10px; */
  /* border-radius: 20rpx; */
  overflow: hidden;
/* box-shadow: 0rem 0.2rem 0.6rem 0rem #E9E9E9; */
}
.share-content-image {
  display: block;
  margin: auto;
  width: 540rpx;
  height: 540rpx;
  margin-top: 20rpx;
  /* height: 750rpx; */
  /* border-radius: 20rpx; */

}
.share-content-price {
  font-size: 30rpx;
  /* margin-top: 20rpx; */

  
}
.share-content-shareText {
  /* margin-left: 20rpx; */
  font-size: 35rpx;

}

.price-container {
  margin-top: 30rpx;
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
}
.share-content-price--share {
  color: #c78a4b;
  font-size: 50rpx;
  line-height: 50rpx;
  font-style: oblique;
  font-weight: bold;
  margin-bottom: 10rpx;
  white-space: nowrap;
}
.content-market-price {
  position: relative;
  /* text-decoration: line-through; */
}
.market-price-delLine {
  position: absolute;
  height: 1rpx;
  background: red;
  width: 100%;
  top: 16rpx;
  right: 0;
}
.market-price-delLine-2 {
  position: absolute;
  height: 1rpx;
  background: red;
  width: 100%;
  top: 26rpx;
  right: 0;
}

.content-price-prefix {
  font-size: 30rpx;
  margin-left: 10rpx;
}

.content-qrcode {
  display: flex;
  flex-direction: column;
  justify-content:flex-start;
  align-items: center;
  padding-top: 0;
}
.content-qrcode text {
  margin-top: 20rpx;
  font-weight: bold;
}
.share-qrcode {
  width: 200rpx;
  height: 200rpx;
  flex-shrink: 0;
}
.share-title {
  margin-right: 20rpx;
}

.share-content-tip {
  font-size: 30rpx;
  font-weight: bold;
  margin-top: 10rpx;
}

.tips {
  margin-top: 20rpx;
}