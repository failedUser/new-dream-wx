Page {
    font-family: 阿里巴巴普惠体L;
}

.swiper-tab {
    width: 100%;
    border-bottom: 2rpx solid #eee;
    text-align: center;
    line-height: 40px;
    background: #fff;
    position: fixed;
    top: 0;
    z-index: 100;
}

.order-top {
    justify-content: flex-start;
    align-items: center;
    border-bottom: 1px solid #e6e6e6;
}

.order-info-mid text {
    font-size: 24rpx;
    height: 40rpx;
    line-height: 40rpx;
}

.order-info-mid .btn,
.order-info-bot .btn {
    font-size: 24rpx;
    width: 120rpx;
    height: 40rpx;
    border-radius: 15rpx;
    border: 1px solid var(--colorGold);
    color: var(--colorGold);
    line-height: 40rpx;
    padding: 0 10rpx;
}

.copy {
    font-size: 12px;
    height: 20px;
    border: 1px solid #aaa;
    border-radius: 50px;
    color: #aaa;
    line-height: 20px;
    padding: 0 7px 0 7px;
    margin-left: 15px;
}

.product-name {
    word-break: break-all;
    white-space: pre-wrap;
    text-overflow: ellipsis;
    overflow: hidden;
    font-size: 14px;
    margin: 0 10px;
    color: #333;
    font-weight: 700;
}

.product-amount {
    font-size: 14px;
    color: #aaa;
}

.product-desb {
    font-size: 12px;
    margin: 0 10px 0 10px;
    color: #888;
}

.product-custom {
    font-size: 24rpx;
    width: 120rpx;
    height: 40rpx;
    line-height: 40rpx;
    margin: 0 10px 0 10px;
    padding: 5rpx 10rpx;
    border-radius: 10rpx;
    text-align: center;
    background: var(--colorGold);
    color: #fff;
}

.product-price {
    font-size: 14px;
    color: #333;
}

.product-sum {
    font-size: 12px;
    margin: 20rpx 30rpx;
    color: #333;
    font-weight: 700;
}

.swiper-tab-list {
    font-size: 12px;
    display: inline-block;
    width: 16.5%;
    color: #666;
    height: 85rpx;
    line-height: 85rpx;
    /* line-height:  */
}

.on {
    color: var(--colorBlue);
    border-bottom: 5rpx solid var(--colorGold);
}

.swiper-box {
    display: block;
    height: 100%;
    width: 100%;
    overflow: hidden;
}

.search_no {
    padding-top: 120rpx;
}

.orderList {
    box-sizing: border-box;
    padding-top: 45px;
}

.order-info-bot {
    padding-left: 0;
}

.button {
    font-size: 28rpx;
    height: 50rpx;
    border: 1px solid var(--colorGold);
    color: var(--colorGold);
    line-height: 50rpx;
    padding: 0 20rpx;
}